<h1>New game</h1>
<div><%= @letters %></div>

<form action="/score" method="post" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input class="btn btn-primary" type="submit" value="Submit your word!">
  <%# Hidden field tag creates a hidden form input field used to transmit data that would be lost due to HTTP's statelessness %>
  <%= hidden_field_tag :letters, @letters %>
</form>
